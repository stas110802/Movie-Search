<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:types="using:MovieSearch.MAUI.Types"
             x:Class="MovieSearch.MAUI.MainPage">
    <ScrollView>
        <StackLayout>
            <SearchBar Text="{Binding SearchQuery}"
                       SearchCommand="{Binding SearchCommand}"
                       Placeholder="Search movies..." />
            <Picker 
                    SelectedItem="{Binding SelectedAttribute}">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type types:SearchType}">
                        <types:SearchType>Title</types:SearchType>
                        <types:SearchType>Genre</types:SearchType>
                        <types:SearchType>Actor</types:SearchType>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <!-- Список фильмов -->
            <CollectionView ItemsSource="{Binding Movies}"
                            SelectionMode="Single"
                            SelectionChanged="OnMovieTapped">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                     Span="1" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Orientation="Horizontal">
                            <Image Source="{Binding Poster}"
                                   WidthRequest="160"
                                   HeightRequest="180"
                                   Aspect="Fill"/>
                            <StackLayout Orientation="Vertical"
                                         VerticalOptions="Center"
                                         Margin="5,0,0,0">
                                <!-- Название фильма -->
                                <Label Text="{Binding Title}"
                                       MaximumWidthRequest="350"
                                       HorizontalOptions="Start"
                                       FontSize="24" />
                                <!-- Жанры -->
                                <StackLayout Orientation="Horizontal" Margin="0,5,0,0">
                                    <Label Text="Жанры:"
                                           FontSize="14"
                                           TextColor="DarkGray" />
                                    <Label Text="{Binding Genre}"
                                           FontSize="14"
                                           Margin="5, 0, 0 ,0"
                                           TextColor="DarkGray" />
                                </StackLayout>

                                <!-- Год выпуска -->
                                <StackLayout Orientation="Horizontal" Margin="0,5,0,0">
                                    <Label Text="Год выпуска:"
                                           FontSize="14"
                                           TextColor="DarkGray" />
                                    <Label Text="{Binding Year}"
                                           FontSize="14"
                                           Margin="5, 0, 0 ,0"
                                           TextColor="DarkGray" />
                                </StackLayout>

                                <!-- Описание фильма -->
                                <StackLayout Orientation="Horizontal" Margin="0,10,0,0">
                                    <Label Text="{Binding ShortDescription}"
                                           MaximumWidthRequest="350"
                                           FontSize="14"
                                           TextColor="DarkGray" />
                                </StackLayout>
                            </StackLayout>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>